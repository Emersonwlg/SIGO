@page
@model LoginModel

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Seja bem vindo!";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 section_container" style="margin: 0 auto;">
            <section>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form id="account" method="post">
                    <fieldset>
                        <h1>Seja bem-vindo!</h1>
                    </fieldset>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Entrar</button>
                        <a class="btn btn-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar</a>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre-se como um novo usuário</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
